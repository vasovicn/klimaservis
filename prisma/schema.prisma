generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Booking {
  id            String   @id @default(cuid())
  name          String
  phone         String
  email         String?
  serviceType   String
  preferredDate DateTime?
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
